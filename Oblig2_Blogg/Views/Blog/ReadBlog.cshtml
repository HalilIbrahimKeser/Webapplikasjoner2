@model Oblig2_Blogg.Models.ViewModels.BlogViewModel

@{
    ViewData["Title"] = "ReadBlog";
}

<h1>@Model.Name</h1>
<hr />
<p>
    Created: @Model.Created, Modified: @Model.Modified,
    @if (@Model.Owner == null)
    {<a>No user</a> }
    else
    {@Model.Owner.UserName}
</p>
<hr />
<h4> @Model.Description</h4>
<p>@Html.ActionLink("Create new post", "CreatePost", new { blogId = @Model.BlogId })</p>
<hr />
<p>Posts:....</p>
<hr />

<table class="table table-hover">
    <tr>
        <th>User</th>
        <th>Post </th>
        <th>Created</th>
        <th>Options</th>
    </tr>
    @foreach (var item in Model.Posts)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Owner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.ActionLink("Read comments", "ReadPost", new { id = item.PostId }) |

                @*@Html.ActionLink("Edit", "EditPost", new { id = item.BlogId }) |

                @Html.ActionLink("Delete", "DeletePost", new { id = item.BlogId })*@
            </td>
        </tr>
    }
</table>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
